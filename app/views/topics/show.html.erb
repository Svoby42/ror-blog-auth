<% if @topic.articles.any? %>
  <table class="table table-striped text-white">
    <thead>
    <tr>
      <th scope="col">Název</th>
      <th scope="col">Odkaz</th>
      <th scope="col">Vytvořeno</th>
    </tr>
    </thead>
    <tbody>
    <% @topic.articles.each do |article| %>
      <tr class="text-white">
        <td>
          <p><%= "#{article.title}" %></p>
          <p>
            <%= shorten(article).truncate(40) %>
          </p>
        </td>
        <td><%= link_to "Odkaz", article_path(article), class: "text-white" %></td>
        <td><%= "#{created_at_time(article)}" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="mt-3">Kategorie
    <strong><%= @topic.title %></strong>
    ještě nemá žádné příspěvky
  </div>
<% end %>