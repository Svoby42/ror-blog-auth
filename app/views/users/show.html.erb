<div class="row", style="height: max-content">
  <h1>Uživatel</h1>
  <div class="col-md-4 mt-3">
    <table class="date-table">
      <tr>
        <td>Účet založen</td>
        <td><%= registered_at_time(@user) %></td>
      </tr>
      <tr>
        <td>Poslední přihlášení</td>
        <td><%= last_login_time(@user) %></td>
      </tr>
      <tr>
        <td>Uživatelské jméno</td>
        <td><%= current_user.username %></td>
      </tr>
      <tr>
        <td>Celé jméno</td>
        <td><%= current_user.full_name %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-4 mt-3">
    Moje příspěvky
    <%= link_to "Nový příspěvek", new_article_path, method: :get, class: "btn btn-primary" %>
    <% if @user.articles.any? %>
      <table class="table table-bordered table-striped">
        <thead>
        <tr>
          <th scope="col">Název</th>
          <th scope="col">Odkaz</th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <% @user.articles.each do |article| %>
              <td><%= "#{article.title}" %></td>
              <td><%= link_to "Odkaz", article_path(article), class: "text-white" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

