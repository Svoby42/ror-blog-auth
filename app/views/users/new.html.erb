<% content_for :title, "Registrace" %>
<h1>Registrace</h1>

<div class="row">
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :username, "Uživatelské jméno" %>
    <%= f.text_field :username, class: 'form-control' %>

    <%= f.label :full_name, "Jméno a příjmení" %>
    <%= f.text_field :full_name, class: 'form-control' %>

    <%= f.label :email, "E-mail" %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password, "Heslo" %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation, "Potvrdit heslo" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <%= f.submit "Zaregistrovat", class: "btn btn-primary mt-3" %>
  <% end %>
</div>