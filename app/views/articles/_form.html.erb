<%= form_with(model: @article) do |f| %>
  <div class="field">

    <%= f.label :title, "Název" %>
    <%= f.text_field :title, class: "form-control mb-3" %>

    <%= f.label :slug, "Slug" %>
    <%= f.text_field :title, class: "form-control mb-3" %>

    <%= f.label :content, "Text" %>
    <%= f.rich_text_area :content, class: "text-dark bg-white mb-3 h-25" %>

    <%= f.submit "Nahrát", class: "btn btn-primary" %>
  </div>
<% end %>