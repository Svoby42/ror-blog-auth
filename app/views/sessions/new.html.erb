<% content_for :title, "Log in" %>
<h1>Přihlášení</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :username, "Uživatelské jméno" %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password, "Heslo" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Přihlásit se", class: "btn btn-primary mt-3 mb-3" %>
    <% end %>
    <p>Nový uživatel? <%= link_to "Zaregistrovat se", signup_path %></p>
  </div>
</div>